{
  "name": "bridge-services",
  "version": "1.0.0",
  "description": "CENNZnet Bridge Services",
  "repository": "https://github.com/cennznet/bridge-services",
  "author": "developers@centrality.ai",
  "license": "Apache",
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev:cennznet": "docker run -p 9944:9944 -p 9933:9933 cennznet/cennznet:latest --dev --unsafe-ws-external --unsafe-rpc-external",
    "dev:execute": "ts-node -r tsconfig-paths/register",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "format": "prettier --config .prettierrc.json ./ --write"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/prettier": "^2",
    "dotenv": "^16.0.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "services/*"
  ]
}
