{
  "name": "bridge-services",
  "version": "1.0.0",
  "description": "CENNZnet Bridge Services",
  "repository": "https://github.com/cennznet/bridge-services",
  "author": "developers@centrality.ai",
  "license": "Apache",
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev:cennznet": "docker run -p 9944:9944 -p 9933:9933 cennznet/cennznet:latest --dev --unsafe-ws-external --unsafe-rpc-external",
    "format": "prettier --config .prettierrc.json ./ --write",
    "build:claim-relayer": "yarn workspace claim-relayer build",
    "start:claim-relayer:processor": "yarn workspace claim-relayer start:claim-processor",
    "start:claim-relayer:publisher": "yarn workspace claim-relayer start:claim-publisher"
  },
  "dependencies": {
    "@cennznet/api": "^2.1.1-alpha.2",
    "@cennznet/bridge-contracts": "cennznet/bridge-contracts#main",
    "@cloudamqp/amqp-client": "^2.0.3",
    "@slack/webhook": "^6.1.0",
    "amqplib": "^0.9.1",
    "bn.js": "^5.2.1",
    "ethers": "^5.6.5",
    "mongoose": "^6.3.4",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@cennznet/types": "^2.1.1-alpha.2",
    "@types/amqplib": "^0",
    "@types/bn.js": "^5",
    "@types/node": "^17.0.35",
    "@types/prettier": "^2",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "services/*"
  ]
}
